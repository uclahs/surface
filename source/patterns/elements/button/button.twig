{% if button.url %}
  <a href="{{ button.url }}" class="button{{ ' ' ~ button.modifier|default('button--link') }}">
    {{ button.text }}
    {# A placeholder for adding an icon to a button.
    TODO: Implement a twig macro that can allows us to add icons. #}
    {% block button_icon %}
      {% if button.icon %}
        <span class="fa-solid fa-arrow-right"></span>
      {% endif %}
    {% endblock %}
  </a>
{% else %}
  <button class="button{{ ' ' ~ button.modifier }}">
    {{ button.text }}
    {% block button_icon %}
      {% if button.icon %}
        <span class="fa-solid fa-arrow-right"></span>
      {% endif %}
    {% endblock %}
  </button>
{% endif %}
